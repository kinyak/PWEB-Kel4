<!DOCTYPE html>
<html>
<head>
<title>Tambah Artikel</title>
<link rel="stylesheet" href="/stylesheets/output.css">
<style>
    .tox-promotion {
        display: none !important;
    }

    
    .img-preview {
        max-width: 300px;
        max-height: 300px;
        display: none;
    }
</style>
<script src="/node_modules/sweetalert2/dist/sweetalert2.all.min.js"></script>
</head>
<body>
    <%- include('../layout/dashboard') %>
<!-- Card Section -->
<div class="max-w-4xl px-4 py-10 sm:px-6 lg:px-8 mx-auto">
<!-- Card -->
<div class="bg-white rounded-xl shadow p-4 sm:p-7">
<div class="mb-8">
    <h2 class="text-xl font-bold text-gray-800">Upload Artikel</h2>
    <p class="text-sm text-gray-600"></p>
</div>
<form id="articleForm" action="/admin/artikel/tambah" method="POST" enctype="multipart/form-data">
    <!-- Grid -->
    <div class="grid sm:grid-cols-12 gap-2 sm:gap-6">
    <div class="sm:col-span-3">
        <label for="judul" class="inline-block text-sm text-gray-800 mt-2.5">Judul:</label>
    </div>
    <!-- End Col -->

    <div class="sm:col-span-9">
        <input
        id="judul"
        name="judul"
        type="text"
        class="py-2 px-3 pe-11 block w-full border-gray-200 shadow-sm text-sm rounded-lg focus:border-primary-500 focus:ring-primary-500 disabled:opacity-50 disabled:pointer-events-none"
        required
        />
    </div>
    <!-- End Col -->

    <div class="sm:col-span-3">
        <label for="konten" class="inline-block text-sm text-gray-800 mt-2.5">Konten:</label>
    </div>
    <div class="sm:col-span-9">
        <textarea
            id="mce_0"
            name="konten"
        ></textarea>
    </div>

    <div class="sm:col-span-3">
        <label for="gambar" class="inline-block text-sm text-gray-800 mt-2.5">Gambar:</label>
    </div>
    <!-- End Col -->

    
    <div class="sm:col-span-9">
        <div class="flex items-center gap-5">
        <div class="flex gap-x-2">
            <div>
                <label for="gambar" class="flex items-center justify-center w-full px-4 py-3 mt-2 space-x-3 text-sm font-medium tracking-wide text-white uppercase transition-colors duration-200 bg-primary-600 rounded-md shadow-md hover:bg-primary-700 focus:ring focus:ring-primary-300 focus:outline-none">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM6.293 6.707a1 1 0 010-1.414l3-3a1 1 0 011.414 0l3 3a1 1 0 01-1.414 1.414L11 5.414V13a1 1 0 11-2 0V5.414L7.707 6.707a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                    </svg>
                    <span>Upload photo</span>
                    <input id="gambar" name="gambar" type="file" class="hidden" onchange="previewImage()" />
                </label>
            </div>
            <br>
            <br>
        </div>
    </div>
    <img class="img-preview mt-4 max-h-96" src="" alt="Image Preview">
    </div>
    <!-- End Col -->

    <div class="sm:col-span-3">
        <label for="kategori" class="inline-block text-sm text-gray-800 mt-2.5">Kategori:</label>
    </div>
    <!-- End Col -->

    <div class="sm:col-span-9">
        <input
        id="kategori"
        name="kategori"
        type="text"
        class="py-2 px-3 pe-11 block w-full border-gray-200 shadow-sm text-sm rounded-lg focus:border-primary-500 focus:ring-primary-500 disabled:opacity-50 disabled:pointer-events-none"
        required
        />
    </div>
    <!-- End Col -->

    <div class="sm:col-span-3">
        <label for="admin_id" class="inline-block text-sm text-gray-800 mt-2.5">Admin:</label>
    </div>

    <div class="sm:col-span-9">
        <select name="admin_id" required class="py-2 px-3 pe-11 block w-full border-gray-200 shadow-sm text-sm rounded-lg focus:border-primary-500 focus:ring-primary-500 disabled:opacity-50 disabled:pointer-events-none">
        <% admins.forEach(function(admin) { %>
        <option value="<%= admin.id %>"><%= admin.email %></option>
        <% }) %>
        </select>
    </div>

    <!-- End Col -->
    </div>
    <!-- End Grid -->

    <div class="mt-5 flex justify-end gap-x-2">
    <button
        type="submit" class="py-2 px-3 inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-primary-600 text-white hover:bg-primary-700 disabled:opacity-50 disabled:pointer-events-none">
        Upload
    </button>
    </div>
</form>
</div>
<!-- End Card -->
</div>
<!-- End Card Section -->



</script>
<% if (messages.error) { %>
    <script>
    Swal.fire({
        icon: 'error',
        title: 'Error',
        text: '<%= messages.error %>'
    });
    </script>
<% } %>

<script src="/node_modules/preline/dist/index.js">
</script>

<script type="application/javascript" src= "/tinymce/tinymce.min.js"></script>
<script type="application/javascript" src= "/javascripts/my-tinymce-config.js"></script>
</body>
</html>