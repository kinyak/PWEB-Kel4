<!DOCTYPE html>
<html>
<head>
<title>Tambah Artikel</title>
</head>
<body>
<h1>Tambah Artikel</h1>
<form action="/admin/artikel/tambah" method="POST">
    <label for="judul">Judul:</label>
    <input type="text" name="judul" required><br><br>
    <label for="konten">Konten:</label>
    <textarea name="konten" required></textarea><br><br>
    <label for="gambar">Gambar:</label>
    <input type="text" name="gambar"><br><br>
    <label for="kategori">Kategori:</label>
    <input type="text" name="kategori" required><br><br>
    <label for="admin_id">Admin:</label>
    <select name="admin_id" required>
    <% admin.forEach(function(admin) { %>
        <option value="<%= admin.id %>"><%= admin.email %></option>
    <% }) %>
    </select><br><br>
    <button type="submit">Simpan</button>
</form>
</body>
</html>