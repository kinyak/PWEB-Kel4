<!-- views/formulir-alumni.ejs -->
<!DOCTYPE html>
<html>
<head>
<title>Formulir Alumni</title>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
<div class="container mt-4">
    <h1>Formulir Alumni</h1>

    <!-- Form for creating a new formulir alumni -->
    <h2>Create Formulir Alumni</h2>
    <form action="/formulir-alumni" method="POST">
    <!-- Add input fields for the required properties -->
    <div class="form-group">
        <label for="nama">Nama</label>
        <input type="text" class="form-control" id="nama" name="nama" required>
    </div>
    <!-- Add more input fields for other properties -->
    <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    <!-- List of all formulir alumni -->
    <h2>All Formulir Alumni</h2>
    <table class="table">
    <thead>
        <tr>
        <th>ID</th>
        <th>Nama</th>
        <!-- Add more table headers for other properties -->
        <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% formulirAlumni.forEach(formulir => { %>
        <tr>
            <td><%= formulir.id %></td>
            <td><%= formulir.nama %></td>
            <!-- Display other properties -->
            <td>
            <a href="/formulir-alumni/<%= formulir.id %>/edit" class="btn btn-sm btn-primary">Edit</a>
            <form action="/formulir-alumni/<%= formulir.id %>?_method=DELETE" method="POST" style="display: inline;">
                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this formulir alumni?')">Delete</button>
            </form>
            </td>
        </tr>
        <% }) %>
    </tbody>
    </table>
</div>

<script>
    // Add client-side form validation if needed
</script>
</body>
</html>