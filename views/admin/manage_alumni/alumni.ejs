            <script>
                const form = document.getElementById('editUserForm');
    form.addEventListener('submit', (event) => {
    event.preventDefault(); // Prevent the default form submission

    const formData = new FormData(form);

    // 1. Create an object to hold parsed values
    const parsedFormData = {};

    // 2. Iterate through FormData entries
    for (const [name, value] of formData.entries()) {
        parsedFormData[name] = value; 
        
        // 3. Handle file inputs (binary data)
        if (value instanceof File) {
            // You might want to handle file uploads differently (e.g., convert to base64)
            parsedFormData[name] = "(binary)"; 
        }
    }

    // 4. Now, log the parsed data
    console.log(parsedFormData); 
    // Send the form data to the server using fetch or XMLHttpRequest
    fetch('/admin/update/alumni', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(parsedFormData)
    })
    .then(response => {
        location.reload();
        // Handle the response
    })
    .catch(error => {
        // Handle the error
    });
    });
        </script>
