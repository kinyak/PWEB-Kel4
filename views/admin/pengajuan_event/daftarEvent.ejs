<!DOCTYPE html>
<html>
<head>
<title>Daftar Event</title>
<link rel="stylesheet" href="/stylesheets/output.css">
</head>
<body>
    <%- include('../layout/dashboard') %>

    <!-- Table Section -->
    <!-- Card -->
    <div class=" max-w-full px-4 py-10 sm:px-6 lg:px-8 mx-auto">
        <div class="-m-1.5 overflow-x-auto">
        <div class="p-1.5 min-w-full inline-block align-middle">
            <div class="bg-white border border-gray-200 rounded-xl shadow-sm overflow-hidden">
            <!-- Header -->
            <div class="px-6 py-4 grid gap-3 md:flex md:justify-between md:items-center border-b border-gray-200">
                <div>
                <h2 class="text-xl font-semibold text-gray-800">
                    Daftar Pengajuan Event
                </h2>
                <p class="text-sm text-gray-600">
                    Add users, edit and more.
                </p>
                </div>
    
                <div>
                <div class="inline-flex gap-x-2">
                    <button type="button" class="hover:text-white hover:bg-red-500 py-2 px-3 inline-flex items-center gap-x-2 text-sm font-medium rounded-lg border border-gray-200 bg-white text-gray-800 shadow-sm  disabled:opacity-50 disabled:pointer-events-none"  id="deleteButton">
                        <svg class="flex-shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M3 6h18M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                        </svg>
                        Delete
                        </button>
                </div>
                </div>
            </div>
            <!-- End Header -->
    
            <!-- Table -->
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                <tr>
                    <th scope="col" class="ps-6 py-3 text-start">
                    <label for="hs-at-with-checkboxes-main" class="flex">
                        <input type="checkbox" id="selectAllCheckbox" class="shrink-0 border-gray-300 rounded text-primary-600 focus:ring-primary-500 disabled:opacity-50 disabled:pointer-events-none" id="hs-at-with-checkboxes-main">
                        <span class="sr-only">Checkbox</span>
                    </label>
                    </th>
    
                    <th scope="col" class="ps-6 lg:ps-3 xl:ps-0 pe-6 py-3 text-start">
                    <div class="flex items-center gap-x-2">
                        <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">
                        Nama
                        </span>
                    </div>
                    </th>
    
                    <th scope="col" class="px-6 py-3 text-start">
                    <div class="flex items-center gap-x-2">
                        <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">
                        Judul
                        </span>
                    </div>
                    </th>
                    <th scope="col" class="px-6 py-3 text-start">
                        <div class="flex items-center gap-x-2">
                            <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">
                            Deskripsi Event
                            </span>
                        </div>
                        </th>
                        <th scope="col" class="px-6 py-3 text-start">
                            <div class="flex items-center gap-x-2">
                                <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">
                                Deskripsi Status Pengajuan
                                </span>
                            </div>
                            </th>
                        <th scope="col" class="px-6 py-3 text-start">
                            <div class="flex items-center gap-x-2">
                                <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">
                                Tanggal Event
                                </span>
                            </div>
                            </th>
                    <th scope="col" class="px-6 py-3 text-start">
                    <div class="flex items-center gap-x-2">
                        <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">
                        Status Event
                        </span>
                    </div>
                    </th>
    
                    <th scope="col" class="px-6 py-3 text-end"></th>
                </tr>
                </thead>
    
                <tbody class="divide-y divide-gray-200">
                    <% event.forEach(event => { %>
                        <tr>
                            <td class="size-px whitespace-nowrap">
                                <div class="ps-6 py-3">
                                    <label for="hs-at-with-checkboxes-<%= event.alumni_id %>-<%= event.pengajuan_event_id %>" class="flex">
                                        <input type="checkbox" class="alumniCheckbox shrink-0 border-gray-300 rounded text-primary-600 focus:ring-primary-500 disabled:opacity-50 disabled:pointer-events-none" id="hs-at-with-checkboxes-<%= event.id %>">
                                        <span class="sr-only">Checkbox</span>
                                    </label>
                                </div>
                            </td>
                            <td class="size-px whitespace-nowrap">
                                <div class="ps-6 lg:ps-3 xl:ps-0 pe-6 py-3">
                                    <div class="flex items-center gap-x-3">
                                        <div class="grow">
                                            <span class="block text-sm font-semibold text-gray-800"><%= event.alumni.name %></span>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="size-px whitespace-nowrap">
                                <div class="ps-6 lg:ps-3 xl:ps-0 pe-6 py-3">
                                    <div class="flex items-center gap-x-3">
                                        <div class="grow">
                                            <span class="block text-sm font-semibold text-gray-800"><%= event.form.judul %></span>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="size-px whitespace-nowrap">
                                <div class="ps-6 lg:ps-3 xl:ps-0 pe-6 py-3">
                                    <div class="flex items-center gap-x-3">
                                        <div class="grow">
                                            <span class="block text-sm font-semibold text-gray-800"><%= event.form.deskripsi %></span>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="size-px whitespace-nowrap">
                                <div class="ps-6 lg:ps-3 xl:ps-0 pe-6 py-3">
                                    <div class="flex items-center gap-x-3">
                                        <div class="grow">
                                            <span class="block text-sm font-semibold text-gray-800"><%= event.form.tanggal_event %></span>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="size-px whitespace-nowrap">
                                <div class="ps-6 lg:ps-3 xl:ps-0 pe-6 py-3">
                                    <div class="flex items-center gap-x-3">
                                        <div class="grow">
                                            <span class="block text-sm font-semibold text-gray-800"><%= event.deskripsi %></span>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="size-px whitespace-nowrap">
                                <div class="px-6 py-3">
                                    <form action="/admin/event/update/<%= event.alumni_id %>-<%= event.pengajuan_event_id %>" method="POST">
                                        <select name="status" class="border border-gray-300 rounded-md px-2 py-1">
                                            <option value="Menunggu persetujuan" <% if (event.status === 'Menunggu persetujuan') { %>selected<% } %>>Menunggu</option>
                                            <option value="Pengajuan Diterima" <% if (event.status === 'Pengajuan Diterima') { %>selected<% } %>>Diterima</option>
                                            <option value="Pengajuan Ditolak" <% if (event.status === 'Pengajuan Ditolak') { %>selected<% } %>>Ditolak</option>
                                        </select>
                                        <button type="submit" class="bg-primary-600 hover:bg-primary-700 text-white font-bold py-1 px-2 rounded">Update</button>
                                    </form>
                                </div>
                            </td>
                            <td class="size-px whitespace-nowrap">
                            </td>
                            </tr>
                            <% }) %>
                            </tbody>
                            </table>
                            <!-- End Table -->
                            
                            <!-- Footer -->
                            <div class="px-6 py-4 grid gap-3 md:flex md:justify-between md:items-center border-t border-gray-200">
                                <div>
                                    <p class="text-sm text-gray-600">
                                        <span class="font-semibold text-gray-800"><%= totalRecords %></span> results
                                    </p>
                                </div>
                            
                                <div>
                                    <div class="inline-flex gap-x-2">
                                        <button type="button" class="py-1.5 px-2 inline-flex items-center gap-x-2 text-sm font-medium rounded-lg border border-gray-200 bg-white text-gray-800 shadow-sm hover:bg-gray-50 <%= currentPage === 1 ? 'disabled:opacity-50 disabled:pointer-events-none' : '' %>">
                                            <a href="?page=<%= currentPage - 1 %>">
                                                <svg class="flex-shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m15 18-6-6 6-6"/></svg>
                                                Prev
                                            </a>
                                        </button>
                                        <div class="inline-flex gap-x-2">
                                            <% for (let i = 1; i <= totalPages; i++) { %>
                                                <% if (i === currentPage) { %>
                                                    <span class="py-1.5 px-2 inline-flex items-center gap-x-2 text-sm font-medium rounded-lg border border-gray-200 bg-gray-100 text-gray-800"><%= i %></span>
                                                <% } else { %>
                                                    <a href="?page=<%= i %>" class="py-1.5 px-2 inline-flex items-center gap-x-2 text-sm font-medium rounded-lg border border-gray-200 bg-white text-gray-800 hover:bg-gray-50"><%= i %></a>
                                                <% } %>
                                            <% } %>
                                        </div>
                                        <button type="button" class="py-1.5 px-2 inline-flex items-center gap-x-2 text-sm font-medium rounded-lg border border-gray-200 bg-white text-gray-800 shadow-sm hover:bg-gray-50 <%= currentPage === totalPages ? 'disabled:opacity-50 disabled:pointer-events-none' : '' %>">
                                            <a href="?page=<%= currentPage + 1 %>">
                                                Next
                                                <svg class="flex-shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
                                            </a>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <!-- End Footer -->
                            </div>
                            </div>
                            </div>
                            </div>
                            <!-- End Card -->
                            </div>
                            <!-- End Table Section -->

                            <div id="hs-editUser" class="hs-overlay hidden size-full fixed top-0 start-0 z-[80] overflow-x-hidden overflow-y-auto">
                                <div class="hs-overlay-open:mt-7 hs-overlay-open:opacity-100 hs-overlay-open:duration-500 mt-0 opacity-0 ease-out transition-all sm:max-w-lg sm:w-full m-3 sm:mx-auto">
                                    <div class="relative flex flex-col bg-white border shadow-sm rounded-xl overflow-hidden dark:bg-neutral-900 dark:border-neutral-800">
                                        <div class="absolute top-2 end-2">
                                            <button type="button" class="flex justify-center items-center size-7 text-sm font-semibold rounded-lg border border-transparent text-gray-800 hover:bg-gray-100 disabled:opacity-50 disabled:pointer-events-none dark:text-white dark:border-transparent dark:hover:bg-neutral-700" data-hs-overlay="#hs-editUser">
                                                <span class="sr-only">Close</span>
                                                <svg class="flex-shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 6 6 18"/><path d="m6 6 12 12"/></svg>
                                            </button>
                                        </div>
                            
                                        <div class="p-4 sm:p-10 overflow-y-auto">
                                            <div class="mb-6 text-center">
                                                <h3 class="mb-2 text-xl font-bold text-gray-800 dark:text-neutral-200">
                                                    Edit User
                                                </h3>
                                                <p class="text-gray-500 dark:text-neutral-500">
                                                    Update the user details.
                                                </p>
                                            </div>

                            <script src="/node_modules/preline/dist/index.js"></script>
                            <script src="/javascripts/checkbox/checkboxEvent.js"></script>



</body>
</html>